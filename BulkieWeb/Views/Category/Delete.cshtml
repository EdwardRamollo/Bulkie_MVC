@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Create Category</h2>
            </div>
        </div>
    </div>
   

    </partial>
    <div class="card-body p-4">
        <div class="container border-secondary">
            <div class="text-primary">
                <h2>Delete Category</h2>
                <hr />
            </div>
            <div asp-validation-summary="All"></div>"

            <form method="post" class="">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control border-0 shadow " />
                    <label asp-for="Name" class="ms-2"></label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
 
                </div>
                <div class="row pt-3 pb-3">
                    <div class="col-6">
                        <button type="submit" asp-controller="Category" asp-action="Delete" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>



